{
    "name": "typescript-jest-boilerplate",
    "version": "1.0.0",
    "license": "MIT",
    "author": "Charles Ahmadzadeh <superzadeh@outlook.com>",
    "scripts": {
        "test:dev": "jest",
        "test": "yarn compile && cross-env NODE_ENV=test jest",
        "test:ci": "yarn test --ci --maxWorkers=2 --verbose --coverage",
        "test:cover": "yarn test --coverage",
        "test:changed": "yarn test --watch",
        "test:update": "yarn test -u",
        "test:watch": "yarn test --watchAll",
        "lint": "tslint -p tsconfig.json",
        "lint:fix": "tslint -p tsconfig.json --fix",
        "compile": "yarn lint && yarn compile:ts",
        "compile:watch": "yarn compile:ts -w",
        "compile:ts": "tsc --project tsconfig.json"
    },
    "devDependencies": {
        "@types/jest": "23.3.2",
        "@types/node": "10.17.13",
        "babel-core": "6.26.3",
        "babel-jest": "23.6.0",
        "cross-env": "5.2.0",
        "jest": "23.6.0",
        "ts-jest": "23.10.5",
        "tsconfig-seek": "1.0.2",
        "tslint": "5.20.1",
        "tslint-config-prettier": "1.18.0",
        "tslint-plugin-prettier": "2.1.0",
        "typescript": "4.0.2"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "html"
        ],
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "testRegex": "(\\.|/)(test)\\.(js|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ]
    },
    "standard": {
        "env": [
            "node",
            "jest"
        ],
        "globals": [
            "expect"
        ]
    },
    "dependencies": {
        "prettier": "^1.19.1",
        "tslint-config-seek": "^1.2.0"
    }
}

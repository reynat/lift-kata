{
    "name": "typescript-jest-boilerplate",
    "version": "1.0.0",
    "license": "MIT",
    "author": "Charles Ahmadzadeh <superzadeh@outlook.com>",
    "devDependencies": {
        "@babel/core": "^7.12.16",
        "@babel/preset-env": "^7.12.16",
        "@babel/preset-typescript": "^7.12.16",
        "@types/jest": "^26.0.20",
        "babel-jest": "^26.6.3",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.1",
        "tslint": "^6.1.3",
        "typescript": "^4.1.5"
    },
    "scripts": {
        "start": "tsc && node dist/main.js",
        "test": "jest"
    },
    "dependencies": {
        "tsoption": "^0.7.0"
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "html"
        ],
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "testRegex": "(\\.|/)(test)\\.(js|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ]
    },
    "standard": {
        "env": [
            "node",
            "jest"
        ],
        "globals": [
            "expect"
        ]
    }
}
